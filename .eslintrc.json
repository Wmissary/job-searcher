{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:unicorn/recommended",
    "plugin:import/recommended",
    "plugin:sonarjs/recommended",
    "plugin:promise/recommended",
    "plugin:n/recommended"
  ],
  "plugins": ["unicorn", "import", "sonarjs", "promise", "n"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  }
}
